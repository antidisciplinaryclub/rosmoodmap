        subject: "ECH BEE DEE PEE PEE POO POO",
        message: `HAPPY BIRTHDAY ROHINI! I HOPE U HAVE THE GREATEST DAY! KEEP SHINING U STAR WE ALL LOVE YOU`
      },




    };

    const fromSelect = document.getElementById('from');
    const subjectInput = document.getElementById('subject');
    const messageBox = document.getElementById('message');
    const randomizeBtn = document.getElementById('randomize');

    function updateEmail() {
      const selected = fromSelect.value;
      subjectInput.value = emails[selected].subject;
      messageBox.textContent = emails[selected].message;
    }

    fromSelect.addEventListener('change', updateEmail);

    randomizeBtn.addEventListener('click', () => {
      const optionsCount = fromSelect.options.length;
      const randomIndex = Math.floor(Math.random() * optionsCount);
      fromSelect.selectedIndex = randomIndex;
      updateEmail();
    });

    updateEmail(); // initialize with first selection
  </script>
</body>
</html>
